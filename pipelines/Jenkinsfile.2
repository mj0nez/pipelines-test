pipeline {
    // don't use 'agent any'
    // 'agent none' allows the job to continue on the same node with the same files
    agent none

    options {
        buildDiscarder(
            logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10')
        )
        disableConcurrentBuilds()
        timeout(time: 300, unit: "SECONDS")
    }
    stages {
        stage('Test') {
            steps {
                sh """
                echo "test 2" 
                """
            }
        }
    }
    post {
        // Clean after build
        always {
            cleanWs()
        }
    }
}
